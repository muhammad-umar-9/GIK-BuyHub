<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign Up - Restaurant Project</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

<header>Restaurant Project</header>

<div class="signup-container">
    <h2>Create an Account</h2>
    <p class="subtitle">Join us and start ordering your favorite meals!</p>

    <input type="text" id="name-input" placeholder="Full Name">
    <input type="email" id="email-input" placeholder="Gmail address">
    <input type="password" id="password-input" placeholder="Password">
    <div id="signup-error-message" class="error-message"></div>

    <button class="main-btn" onclick="handleSignup()">Sign Up</button>

    <div class="footer-text">
        By signing up, you agree to our Terms & Privacy Policy.
    </div>

    <div class="account-switch">
        Already have an account? <a href="login.html">Log in</a>
    </div>
</div>

<script>
function handleSignup() {
    const name = document.getElementById('name-input').value.trim();
    const email = document.getElementById('email-input').value.trim();
    const password = document.getElementById('password-input').value.trim();
    const errorDiv = document.getElementById('signup-error-message');

    if (!name || !email || !password) {
        errorDiv.textContent = "All fields are required.";
    } else if (!email.includes("@gmail.com")) {
        errorDiv.textContent = "Only Gmail addresses are allowed.";
    } else {
        const user = {
            name: name,
            password: password
        };
        localStorage.setItem(email, JSON.stringify(user));
        alert("Account created! Please log in.");
        window.location.href = "login.html";
    }
}
</script>

</body>
</html>
